
@model Billing

    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        <h4>Hey! You are just one step away from ordering your selected items</h4>

        <div class="form-group">
            <label class="col-md-3 control-label"> Customer Name </label>
            <div class="col-md-8">
                <input asp-for="CustName" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CustAddress1" class="col-md-3 control-label"> Customer Address 1 </label>
            <div class="col-md-8">
                <input asp-for="CustAddress1" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CustAddress2" class="col-md-3 control-label"> Customer Address 1 </label>
            <div class="col-md-8">
                <input asp-for="CustAddress2" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="State" class="col-md-3 control-label"> </label>
            <div class="col-md-8">
                <input asp-for="State" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="col-md-3 control-label"> </label>
            <div class="col-md-8">
                <input asp-for="Country" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ZipCode" class="col-md-3 control-label"> </label>
            <div class="col-md-8">
                <input asp-for="ZipCode" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="col-md-3 control-label"> </label>
            <div class="col-md-8">
                <input asp-for="Phone" style="width:100%" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-3 control-label"> </label>
            <div class="col-md-8">
                <input asp-for="Email" style="width:100%" />
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" class="btn btn-primary" value="Go For Payment" />
            </div>
        </div>
    </form>
