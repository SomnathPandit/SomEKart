@model Item

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="ASP.NET" class="img-responsive" />
        <div class="caption">
            <h3 class="pull-right"> @Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Inventory" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-itemId="@Model.Id">Add to cart
                </a>
            </p>
        </div>
    </div>
</div>